import java.io.*;
import java.net.*;
import java.util.ArrayList;
import java.util.HashMap;

public class RestServer {
	
	private static ArrayList<String> menuItems;
	private static HashMap<String, String> menuItems2;

	public static void main(String[] args) {
			
		readMenuFromFile();
		
		ServerSocket srv = null;
		boolean listen = true;
		try {
			srv = new ServerSocket(3333);
			while (listen)
				new RestThread(srv.accept()).start();
			srv.close();
			
		} catch(IOException e){ e.printStackTrace(); }

	}
	
	public static void readMenuFromFile() {
		menuItems = new ArrayList<String>();
		BufferedReader br;
		
		try {
			br = new BufferedReader(new FileReader("C:\\menu.txt"));
			String item = br.readLine();
			while (item != null) {
				menuItems.add(item);
			}
		} 
		catch (FileNotFoundException e1) { e1.printStackTrace(); }
	    catch (IOException e) { e.printStackTrace(); }	
		
	}
	
	public static void readMenuFromFile2() {
		menuItems2 = new HashMap<String, String>();
	}

}
